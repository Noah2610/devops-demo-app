    "scripts": {
        "start": "node server.js",
        "start:dev": "nodemon -w ./server.js ./server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "esbuild ./src/app.js --bundle --outfile=./public/bundle.js",
        "prebuild": "rm -f ./public/bundle.js",
        "dev": "npm-run-all -p 'dev:*'",
        "dev:serve": "live-server ./public --port 8080 --no-browser",
        "dev:build": "nodemon -w ./src -w ./public/index.html -x 'npm run build'"
    },
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "esbuild": "^0.17.19",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "live-server": "^1.2.2",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5"
    }
}
